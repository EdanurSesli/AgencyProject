@model List<AcunMedyaAkademiAgency.Entities.Service>
<section class="page-section" id="services">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Hizmetler</h2>
            <h3 class="section-subheading text-muted">Aşağıdan Hizmet Kategorilerimize Ulaşabilirsiniz</h3>
        </div>
        <div class="row text-center">
            @foreach (var item in Model)
            {
                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="service-box">
                        <span class="fa-stack fa-4x">
                            <img src="@item.ImageUrl" class="circle-image" />
                        </span>
                        <h4 class="my-3">@item.Title</h4>
                        <p class="text-muted">@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .service-box {
        background: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        min-height: 300px; /* Kutuların eşit boyutta olması için */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .circle-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .text-muted {
        flex-grow: 1;
    }
</style>
